<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="SimpleFormChange354"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Add/Edit Work Item"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <Label text="Template Name" />
                <Input id="name" value="{SupplierName}" />
                <Label text="Work Item Description" />
                <Input value="{Street}" />
                <Label text="Work Number / Cost Object Assignment" />
                <Input value="{City}" />
                <Label text="Absence / Absence Type" />
                <Input value="{City}" />
            </f:content>
        </f:SimpleForm>
        <OverflowToolbar id="otb1">
            <ToolbarSpacer />
            <Button text="Add Template" type="Emphasized" />
        </OverflowToolbar>
        <Table id="idProductsTable" inset="false" items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
            <headerToolbar>
                <!-- <OverflowToolbar>
				<Label text="Work Items"/>
			</OverflowToolbar> -->

